<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>BookStore</display-name>
  
   <welcome-file-list>
    <welcome-file>Home</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>Home</servlet-name>
  	<servlet-class>com.bookstore.controller.Home</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Home</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>BorrowController</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>BorrowController</servlet-name>
  	<servlet-class>com.bookstore.controller.BorrowController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>BorrowController</servlet-name>
  	<url-pattern>/borrow</url-pattern>
  </servlet-mapping>
  
  
   <welcome-file-list>
    <welcome-file>BookController</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>BookController</servlet-name>
  	<servlet-class>com.bookstore.controller.BookController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>BookController</servlet-name>
  	<url-pattern>/book</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>StudentController</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>StudentController</servlet-name>
  	<servlet-class>com.bookstore.controller.StudentController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>StudentController</servlet-name>
  	<url-pattern>/student</url-pattern>
  </servlet-mapping>
  

</web-app>